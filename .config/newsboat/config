auto-reload yes # reload feeds once newsboat is opened
max-items 512
show-read-feeds no # Hide feeds where all the items are read.
feed-sort-order unreadarticlecount-asc
text-width 50 # Make the text width readable
reload-threads 11 # Use multiple threads to download all the news faster.
notify-always yes
notify-program  /run/current-system/sw/bin/notify-send
confirm-exit yes
notify-always no
notify-format "newsboat:\n %n new feeds available!"

# colors
color info default default reverse
color listnormal_unread yellow default
color listfocus blue default reverse bold
color listfocus_unread blue default reverse bold

